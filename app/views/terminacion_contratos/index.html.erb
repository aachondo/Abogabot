<div class="page-header">
  <h1>
    Terminación de Contratos
  </h1>
  <a href="/terminacion_contratos/new" class="btn btn-lg btn-success"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span>        <span class="glyphicon glyphicon-file" aria-hidden="true"></span></a>
    <a href="/causals" class="btn btn-lg btn-default">Ver causales</a>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-bordered table-condensed table-hover">
      <tr>
        <th>Última modificación</th>
        <th>Empleador</th>
        <th>Empleado</th>
        <th>Acciones</th>
      </tr>

      <% @terminacion_contratos.order("updated_at DESC").each do |terminacion_contrato| %>
      <% if terminacion_contrato.employer.user.id == current_user.id %>
      <tr>
        <!-- true -->
        <td><%= terminacion_contrato.created_at %></td>
        <td><% if terminacion_contrato.employer.personalidad == "PN" %>
          <%= terminacion_contrato.employer.last_name + ", "+ terminacion_contrato.employer.first_name  %>
          <% else %>
          <%= terminacion_contrato.employer.nombre_empresa %>
          <% end %>
        </td>

        <td><%= terminacion_contrato.employee.last_name + ", "+ terminacion_contrato.employee.first_name  %></td>




        <td>
          <a href="/terminacion_contratos/<%= terminacion_contrato.id %>" class="btn btn-default"><i class="fa fa-eye" aria-hidden="true"></i></a>
          <a href="/terminacion_contratos/<%= terminacion_contrato.id %>/edit" class="btn btn-default"><i class="fa fa-edit" aria-hidden="true"></i></a>
          <a href="/delete_terminacion_contrato/<%= terminacion_contrato.id %>" class="btn btn-default" rel="nofollow"><i class="fa fa-trash" aria-hidden="true"></i></a>


        </td>
      </tr>
      <% end %>
      <% end %>
    </table>
  </div>
</div>
