<div class="page-header">
  <h1>
    Empleados
  </h1>
  <a href="/employees/new" class="btn btn-lg btn-success"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span>        <span class="glyphicon glyphicon-briefcase" aria-hidden="true"></span></a>



</div>


<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-bordered table-condensed table-hover">
      <tr>
        <th>Rut</th>
        <th>Nombre</th>
        <th>Actions</th>
      </tr>



      <% @employees.order("rut ASC").each do |employee| %>
<% if employee.user_id == current_user.id %>
<tr>
  <td><%= employee.rut %></td>
  <td><%= employee.last_name + ", " + employee.first_name %></td>
  <td>
    <a href="/employees/<%= employee.id %>" class="btn btn-default"><i class="fa fa-eye" aria-hidden="true"></i></a>
    <a href="/employees/<%= employee.id %>/edit" class="btn btn-default"><i class="fa fa-edit" aria-hidden="true"></i></a>
    <a href="/delete_employee/<%= employee.id %>" class="btn btn-default" rel="nofollow"><i class="fa fa-trash" aria-hidden="true"></i></a>
  </td>
</tr>
<% else %>
  <!-- false -->
<% end %>

      <% end %>
    </table>
  </div>
</div>
